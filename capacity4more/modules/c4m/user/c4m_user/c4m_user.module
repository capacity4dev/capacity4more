/**
 * Implements hook_mail().
 *
 * Set's the message subject and body as configured.
 */
function c4m_user_mail($key, &$message, $params) {
  $message['subject'] .= str_replace(array("\r", "\n"), '', $params['subject']);
  $message['body'][] = $params['body'];
}

