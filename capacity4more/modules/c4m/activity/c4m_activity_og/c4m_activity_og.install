/**
 * Implements hook_install().
 */
function c4m_activity_og_install() {
  $actions = array(
    'approve',
    'request',
    'join',
    'leave',
    'reject',
    'remove',
    'revoke',
    'block',
    'unblock',
  );

  _c4m_activity_og_install_message_types();
  _c4m_activity_og_install_create_fields($actions);
}

