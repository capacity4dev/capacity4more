/**
 * Helper to create the node reference fields.
 *
 * @param array $actions
 *   The possible action types.
 */
function _c4m_activity_og_install_create_fields($actions) {
  $types = array(
    'c4m_activity_user' => array(
      'label' => st('User'),
      'description' => st('The user the membership is about.'),
      'target_type' => 'user',
      'foreign keys' => array(
        'users' => array(
          'columns' => array(
            'target_id' => 'uid',
          ),
          'table' => 'users',
        ),
      ),
    ),
    'c4m_activity_group' => array(
      'label' => st('Group'),
      'description' => st('The group the membership is about.'),
      'target_type' => 'node',
      'foreign keys' => array(
        'node' => array(
          'columns' => array(
            'target_id' => 'nid',
          ),
          'table' => 'node',
        ),
      ),
    ),
  );

  $weight = 0;
  foreach ($types as $type => $info) {
    $weight++;

    $field = field_info_field($type);
    if (!$field) {
      $field = array(
        'active' => 1,
        'cardinality' => 1,
        'deleted' => 0,
        'entity_types' => array(),
        'field_name' => $type,
        'foreign keys' => $info['foreign keys'],
        'indexes' => array(
          'target_id' => array(
            0 => 'target_id',
          ),
        ),
        'locked' => 0,
        'module' => 'entityreference',
        'settings' => array(
          'handler' => 'base',
          'handler_settings' => array(
            'behaviors' => array(
              'views-select-list' => array(
                'status' => 0,
              ),
            ),
            'sort' => array(
              'type' => 'none',
            ),
            'target_bundles' => array(),
          ),
          'target_type' => $info['target_type'],
        ),
        'translatable' => 0,
        'type' => 'entityreference',
      );
      field_create_field($field);
    }

    foreach ($actions as $action) {
      // e.g. message-c4m_activity_og_ACTION-c4m_activity_user
      $instance = array(
        'bundle' => 'c4m_activity_og_' . $action,
        'default_value' => NULL,
        'default_value_function' => '',
        'deleted' => 0,
        'description' => $info['description'],
        'display' => array(
          'default' => array(
            'label' => 'above',
            'settings' => array(),
            'type' => 'hidden',
            'weight' => 1,
          ),
        ),
        'entity_type' => 'message',
        'field_name' => $type,
        'label' => $info['label'],
        'required' => 1,
        'settings' => array(
          'behaviors' => array(
            'prepopulate' => array(
              'status' => 0,
            ),
          ),
          'user_register_form' => FALSE,
        ),
        'widget' => array(
          'active' => 1,
          'module' => 'entityreference',
          'settings' => array(
            'match_operator' => 'CONTAINS',
            'path' => '',
            'size' => 60,
          ),
          'type' => 'entityreference_autocomplete',
          'weight' => $weight,
        ),
      );
      field_create_instance($instance);
    }
  }
}
