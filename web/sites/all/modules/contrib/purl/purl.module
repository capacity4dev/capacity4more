/**
 * Implements hook_menu_link_alter().
 */
function purl_menu_link_alter(&$item) {
  if (!empty($item['menu_name'])) {
    // Apply PURL behavior for the menu of the current item.
    $menu_purl_behavior = variable_get('purl_menu_behavior_' . $item['menu_name'], 'enabled');
    if ($menu_purl_behavior == 'disabled') {
      $item['options']['purl']['disabled'] = TRUE;
    }
    elseif (isset($item['options']['purl']['disabled'])) {
      unset($item['options']['purl']['disabled']);
    }
  }
}

/**
 * Implements hook_menu_alter().
 */
function purl_menu_alter(&$items) {
  // Check for PURL menus needing PURL behavior check.
  foreach (menu_get_menus() as $menu_name => $title) {
    $behavior = variable_get('purl_menu_behavior_' . $menu_name, FALSE);
    if ($behavior) {
      module_load_include('inc', 'purl', 'purl.admin');
      $tree = menu_tree_all_data($menu_name);
      _purl_menu_edit_submit_recurse($tree, $behavior);
    }
  }
}
