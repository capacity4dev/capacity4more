/**
 * Implements hook_entity_type_label_alter().
 */
function c4m_content_discussion_entity_type_label_alter(&$variables) {
  if (empty($variables['entity']->type) ||
    'discussion' !== $variables['entity']->type
  ) {
    return;
  }
  $variables['label'] .= ' ' . ('posted by');
}

/**
 * Retrieve a simple label for a discussion type.
 *
 * @param string $label
 *   Original text label.
 *
 * @return array
 *   Simple label and icon class.
 */
function c4m_content_discussion_simple_label($label) {
  $replace = array();
  $text = $label;
  $class = '';

  switch ($label) {
    case t('Ask a Question'):
      $text = t('Question');
      $class = 'fa-question-circle';
      break;

    case t('Share an Idea'):
      $text = t('Idea');
      $class = 'fa-lightbulb-o';
      break;

    case t('Share Information'):
      $text = t('Information');
      $class = 'fa-info-circle';
      break;

    case t('Start a Debate'):
      $text = t('Debate');
      $class = 'fa-comments';
      break;
  }

  return array('label' => $text, 'class' => $class);
}

