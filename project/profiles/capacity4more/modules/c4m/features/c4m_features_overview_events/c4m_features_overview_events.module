include_once 'c4m_features_overview_events.features.inc';

define('C4M_FEATURES_OVERVIEW_EVENTS_SORT_BY_START_DATE', 'Start Date');
define('C4M_FEATURES_OVERVIEW_EVENTS_SORT_BY_RELEVANCE', 'Relevance');

