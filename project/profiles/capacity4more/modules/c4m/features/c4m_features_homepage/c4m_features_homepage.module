/**
 * Maximum groups to display on blocks.
 *
 * On the homepage we have "suggested groups" and "my groups" blocks where we
 * should limit the amount of groups to be displayed.
 */
define('C4M_FEATURES_HOMEPAGE_MAX_GROUPS_PER_BLOCK', 3);

/**
 * Implements hook_ctools_plugin_directory().
 */
function c4m_features_homepage_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools') {
    return 'plugins/' . $plugin;
  }
}

/**
 * Renders suggested groups for the user.
 *
 * Suggest 5 random groups for the user which he is not subscribed to.
 * When interests filter is applied : select groups which has at least one
 * common topic of interest with the user.
 * Interests are taken from user's profile.
 *
 * @return mixed
 *   Rendered HTML of suggested groups.
 */
function c4m_features_homepage_c4m_suggested_groups_get_groups() {
  return c4m_features_homepage_get_suggested_items('group');
}

/**
 * Renders suggested projects for the user.
 *
 * Suggest 5 random projects for the user which he is not subscribed to.
 * When interests filter is applied : select projects which has at least one
 * common topic of interest with the user.
 * Interests are taken from user's profile.
 *
 * @return mixed
 *   Rendered HTML of suggested projects.
 */
function c4m_features_homepage_c4m_suggested_projects_get_projects() {
  return c4m_features_homepage_get_suggested_items('project');
}

/**
 * Renders suggested OG nodes for the user.
 *
 * @param string $bundle
 *   Can be project or group.
 *
 * @return mixed
 *   Rendered Html of suggested OG nodes.
 */
function c4m_features_homepage_get_suggested_items($bundle) {
  global $user;
  $account = user_load($user->uid);

  $user_wrapper = entity_metadata_wrapper('user', $account->uid);
  $interests = $user_wrapper->c4m_vocab_topic->raw();

  $get_query = drupal_get_query_parameters();
  $filter = !empty($get_query['filter'])
    ? $get_query['filter']
    : NULL;

  $user_groups = og_get_groups_by_user($account, NULL, TRUE);

  $query = new EntityFieldQuery();

  $query
    ->entityCondition('entity_type', 'node')
    ->entityCondition('bundle', $bundle)
    ->propertyCondition('status', NODE_PUBLISHED)
    ->fieldCondition('c4m_og_status', 'value', 'published');

  if (!empty($user_groups['node'])) {
    $query
      ->propertyCondition('nid', $user_groups['node'], 'NOT IN');
  }

  if (!empty($interests)) {
    $query->fieldCondition('c4m_vocab_topic', 'tid', $interests, 'IN');
  }

  $result = $query
    ->addTag('random')
    ->execute();

  if (empty($result['node'])) {
    return;
  }

  $suggested_items = c4m_features_homepage_alphabetically_render_node_list($result['node']);

  $variables['groups'] = $suggested_items;
  $link_options = array(
    'absolute' => TRUE,
    'query' => array(
      'filter' => 'interests',
    ),
  );
  $variables['link'] = url('groups', $link_options);

  return theme('c4m_features_homepage_c4m_suggested_groups', $variables);
}

