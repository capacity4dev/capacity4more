}

/**
 * Implements hook_theme().
 */
function c4m_features_homepage_theme() {
  $theme['c4m_voices_views_carousel'] = array(
    'template' => 'voices-views-carousel',
    'path' => drupal_get_path('module', 'c4m_features_homepage') . '/templates',
    'variables' => array(
      'carousels' => NULL,
      'link' => NULL,
    ),
  );

