    '#disabled' => TRUE,
  );

  $form['c4m_contact_user_subject'] = array(
    '#type' => 'textfield',
    '#title' => t('Subject'),
    '#description' => t('Enter mail subject.'),
    '#size' => 10,
  );

  $form['c4m_contact_user_body'] = array(
    '#title' => t('Body'),
    '#description' => t('Enter mail body.'),
    '#type' => 'text_format',
    '#format' => 'full_html',
  );

  $form['c4m_contact_user_self_copy'] = array(
    '#type' => 'checkbox',
