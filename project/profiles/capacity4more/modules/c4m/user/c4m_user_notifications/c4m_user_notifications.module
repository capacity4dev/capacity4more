}

/**
 * Implements hook_flag_flag().
 *
 * Triggers email notification when recommendation flag is set.
 */
function c4m_user_notifications_flag_flag($flag, $entity_id, $account, $flagging) {
  // Don't send notifications during dummy content migration.
  if (c4m_user_notifications_dummy_content_migration()) {
    return;
  }

  if ($flag->name != 'c4m_og_content_recommend') {
    // If not recommendation flag, return early.
    return;
  }

  $context = og_context();
  if (!$context && $context->type != 'group') {
    // If not at OG group context, return early.
    return;
  }

  if (!in_array($flag->type, array('wiki_page', 'discussion', 'document', 'event'))) {
    // If recommended content does not required notification, return early.
    return;
  }

  c4m_user_notifications_group_content_recommended($flag, $entity_id, $account, $flagging);
}

