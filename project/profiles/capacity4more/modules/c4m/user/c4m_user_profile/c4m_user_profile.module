/**
 * Gets the unsubscribe hash.
 *
 * @param int $uid
 *   The user ID.
 * @param string $flag_suffix
 *   The flag suffix to unsubscribe from.
 * @param string $entity_id
 *   The ID of the entity to unsubscribe from.
 *
 * @return string
 *   The unsubscribe hash.
 */
function c4m_user_profile_get_unsubscribe_hash($uid, $flag_suffix, $entity_id) {
  $hash = md5($uid . ':::' . $flag_suffix . ':::' . $entity_id . ':::' . drupal_get_private_key());
  return $hash;
}

/**
 * Access callback; Unsubscribe a user.
 *
 * @param object $account
 *   The user account.
 * @param string $flag_suffix
 *   The flag suffix to unsubscribe from.
 * @param string $entity_id
 *   The ID of the entity to unsubscribe from.
 * @param string $hash
 *   The unsubscribe hash string.
 *
 * @return bool
 *   TRUE if user has access.
 */
function c4m_user_profile_unsubscribe_user_access($account, $flag_suffix, $entity_id, $hash) {
  if (!$account || c4m_user_is_spammer($account) || $account->status === 0) {
    return FALSE;
  }

  if (c4m_user_profile_get_unsubscribe_hash($account->uid, $flag_suffix, $entity_id) !== $hash) {
    return FALSE;
  }

  // Validate entity ID.
  try {
    if ($flag_suffix === 'group' || $flag_suffix === 'comment') {
      $entity_type = 'node';
    }
    else {
      $entity_type = $flag_suffix;
    }
    $wrapper = entity_metadata_wrapper($entity_type, $entity_id);
    if (!$wrapper->value()) {
      return FALSE;
    }
  }
  catch (\EntityMetadataWrapperException $e) {
    return FALSE;
  }

  return TRUE;
}

/**
 * Access callback for "Leave platform" page.
 *
 * @param object $account
 *   The user object.
 *
 * @return bool
 *   TRUE if user has access.
 */
function c4m_user_profile_leave_user_access($account) {
  global $user;

  if ($account->uid != $user->uid) {
    return FALSE;
  }

  return TRUE;
}

/**
 * Page callback; Unsubscribe a user.
 *
 * @param object $account
 *   The user account.
 * @param string $entity_type
 *   The flag suffix to unsubscribe from.
 * @param string $entity_id
 *   The ID of the entity to unsubscribe from.
 */
function c4m_user_profile_unsubscribe_user($account, $entity_type, $entity_id) {
  $flag = flag_get_flag('subscribe_c4m_follow_' . ($entity_type === 'taxonomy_term' ? 'term' : $entity_type));
  module_load_include('inc', 'c4m_user_profile', 'c4m_user_profile.pages');
  $flaggings = c4m_user_profile_get_flag_flaggings($flag, $account);

  foreach ($flaggings as $flagging_id) {
    $flagging = flagging_load($flagging_id);

    if ($flagging->entity_id !== $entity_id) {
      continue;
    }

    $flagging->preference = C4M_MESSAGE_DIGEST_FREQUENCY_NEVER;
    c4m_message_digest_set_preference($flagging);
    break;
  }

  drupal_set_message(t('Successfully unsubscribed'));
  drupal_goto();
}

