  $form['subscribe_to_mailinglist'] = [
    '#type' => 'checkbox',
    '#title' => t('Send me the monthly capacity4dev newsletter (see !samples)', [
      '!samples' => l(t('samples'), 'newsletters', ['attributes' => ['target' => '_blank']]),
    ]),
    '#weight' => 50,
    '#description' => t('Capacity4dev.eu uses a third-party service for newsletter delivery and administration. All your data is safe and subject to European Data protection and privacy legislation. Read the !privacy_statement_link of the newsletter platform for more information.', [
      '!privacy_statement_link' => l(t('Privacy Statement'), 'https://www.campaignmonitor.com/policies', [
        'attributes' => [
          'absolute' => TRUE,
          'target' => '_blank',
        ],
      ]),
    ]),
