{
  "env": {
    "browser": true
  },
  "root": true,
  "globals": {
    "Drupal": true,
    "jQuery": true,
    "tinyMCE": true
  },
  "rules": {
    "camelcase": 0,
    "consistent-return": 0,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 2,
    "new-cap": 0,
    "no-alert": 0,
    "no-catch-shadow" : 2,
    "no-constant-condition": 0,
    "no-new": 0,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "no-use-before-define": 0,
    "quotes": 0,
    "strict": 0
  }
}
